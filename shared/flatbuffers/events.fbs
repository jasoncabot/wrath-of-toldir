include "util.fbs";
include "maps.fbs";
include "npcs.fbs";

namespace WrathOfToldir.Events;

table MoveEvent {
    key: int32;
    pos: Vec2;
    char_layer: string;
}

table JoinEvent {
    key: int32;
    pos: Vec2;
    name: string;
    char_layer: string;
}

table LeaveEvent {
    key: int32;
}

table AttackEvent {
    key: int32;
    facing: int8;
}

table MapJoinedEvent {
    pos: Vec2;
    char_layer: string;
    tilemap: WrathOfToldir.Maps.TileMap;
    npcs: [WrathOfToldir.Npcs.Npc];
}

table MapChangedEvent {
    id: string;
}

union Update { 
    JoinEvent,
    MoveEvent,
    LeaveEvent,
    AttackEvent,
    MapJoinedEvent,
    MapChangedEvent
}

table EventLog {
    events: [Update];
}

root_type EventLog;
